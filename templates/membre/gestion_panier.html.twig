{% block content %}

<div class="col-10 mx-auto border border-dark">

    <div class="row mx-auto cdes">
        <h3 class="col-12 mt-5 btn-dark pb-2 pt-2 vdc">Votre Panier de réservation</h3>
        <table class="table table-stripped">
            <thead>
                <tr> 
                    <th>Article</th>
                    <th>Date de début de location</th>
                    <th>Date de fin de location</th>
                    <th>Prix du produit</th>
                    <th>Statut</th>
