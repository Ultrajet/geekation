{% extends 'base.html.twig' %}

{% block content %}


    <div class="table table-striped">
        <h1 class="text-center pb-2 pt-3">Gestion des Produits</h1>

        <div class="col-2 text-center mb-3 ajout_produit">
            <a type="submit" name="ajout_produit" class="btn" href="{{ path('admin_produits_add') }}"><i class="fas fa-plus"></i> Ajouter un Produit</a>
        </div>

        <table class="col-md-8 mx-auto">
            <thead>
                <tr class="text-center titrecolonne">
                    <td>Id</td>
                    <td>Nom</td>
                    <td>Prix</td>
                    <td>Type</td>
                    <td>Univers</td>
                    <td>Slug</td>
                    <td>GUID</td>
                    <td>Voir</td>
                    <td>Modifier</td>
                    <td>Supprimer</td>
                </tr>
            </thead>
            <tbody>
                {% for pdt in produits %}
                    <tr class='text-center'>
                        <td>{{ pdt.id }}</td>
                        <td>{{ pdt.nom }}</td>
                        <td>{{ pdt.prix}}€</td>
                        <td>{{ pdt.type}}</td>
                        <td>{{ pdt.univers}}</td>
                        <td>{{ pdt.slug}}</td>
                        <td>{{ pdt.guid}}</td>
                        <td>
                            <a href="{{ path('produit_id', {id : pdt.id} ) }}"><i class="fas fa-eye"></i></a>
                        </td>
                        <td>
                            <a href="{{ path('admin_produits_update', {id : pdt.id} ) }}"><i class="fas fa-pencil-alt"></i>️</a>
                        </td>
                        <td>
                            <a onclick="return confirm('Etes Vous sur de vouloir supprimer cette article ?')" href="{{ path('admin_produits_delete', {id : pdt.id} ) }}"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>


{% endblock %}
