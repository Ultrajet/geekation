{% extends 'base.html.twig' %}

{% block content %}


    {# -- ------------------------------ CAROUSEL TOP --------------------------------------- -- #}

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="image/carou1.png" class="d-block w-100" alt="...">

            </div>
            <div class="carousel-item">
                <img src="image/carou2.png" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="image/carou3.png" class="d-block w-100" alt="...">
            </div>
        </div>
    </div>
    <br>

    {# -- ------------------------------ FIN CAROUSEL --------------------------------- -->
                        <!-- ------------------------------ SPOTLIGHT --------------------------------------- -- #}

    <div class="row spotlight justify-content-around">
        <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
            <div class="card">
                <img src="image/spotlight.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of
                                                                                                                                                    the card's content.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
            <div class="card">
                <img src="image/spotlight2.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of
                                                                                                                                                    the card's content.</p>
                </div>
            </div>
        </div>
    </div>

    <br>

    {#  ------------------------------ FIN SPOTLIGHT --------------------------------- -->
                        <!-- ------------------------------ PRODUITS TOP  --------------------------------------- #}

    <!--TEST SLIDER PRODUIT-->
        <section
        class="carousel slide" data-ride="carousel" id="postsCarousel"> <!--FLECHE DE DIRECTION (a regler)-->
        <div class="container">
            <div class="row">
                <div class="col-12 text-right mb-4">
                    <a class="btn btn-outline-secondary prev" href="" title="prev">
                        <i class="fa fa-lg fa-chevron-left"></i>
                    </a>
                    <a class="btn btn-outline-secondary next" href="" title="next">
                        <i class="fa fa-lg fa-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="container-fluid p-t-0 m-t-2 carousel-inner justify-content-center"> 
            <!--PARTIE 1 DU SLIDER VIGNETTE-->

            <div class="row row-equal carousel-item active padpad ">
                {% for produit in produits | slice (0,6) %}
                    <div class="col-md-2">
                        <div class="card">
                            <div class="card-img-top card-img-top-250">
                                <img class="img-fluid" src="image/logsims.jpg" alt="Carousel 1">
                                <img class="img-fluid" src="image/logsims.jpg" alt="Carousel 1">
                            </div>
                            <div class="card-block p-t-2 ">
                                <div class="card-text">
                                    <div class="card-titre">{{ produit.nom }}</div>
                                    <div class="card-spec">à partir de</div>
                                    <div class="card-prix">{{ produit.prix }}€</div>
                                    <div class="btn card-resa d-flex">
                                        <a href="#" class="btn btn-info mr-2 boutton">réserver</a>
                                        <a class="btn btn-info boutton" href="{{ path('produit', {slug: produit.slug}) }}">Fiche produit</a>
                                    </div><br>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!--PARTIE 2 DU SLIDER VIGNETTE-->

            <div class="row row-equal carousel-item  m-t-0 padpad">
                {% for produit in produits | slice (0,6) %}
                    <div class="col-md-2">
                        <div class="card">
                            <div class="card-img-top card-img-top-250">
                                <img class="img-fluid" src="image/logsims.jpg" alt="Carousel 1">
                                <img class="img-fluid" src="image/logsims.jpg" alt="Carousel 1">
                            </div>
                            <div class="card-block p-t-2 ">
                                <div class="card-text">
                                    <div class="card-titre">{{ produit.nom }}</div>
                                    <div class="card-spec">à partir de</div>
                                    <div class="card-prix">{{ produit.prix }}€</div>
                                    <div class="btn card-resa d-flex">
                                        <a href="#" class="btn btn-info mr-2 boutton">réserver</a>
                                        <a class="btn btn-info boutton" href="{{ path('produit', {slug: produit.slug}) }}">Fiche produit</a>
                                    </div><br>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
    </section>
    <br>
    {# ------------------------------ FIN PRODUITS TOP --------------------------------- #}

    <div class="container">
        {% for produit in produits %}
            <div class="col-3 mx-auto mb-2 p-2 border border-dark text-center">
                <p>{{ produit.nom }}</p>
                <p>{{ produit.prix }}€</p>
                <a class="btn btn-info" href="{{path('produit', {slug: produit.slug})}}">Fiche produit</a>
            </div>
        {% endfor %}
    </div>

{% endblock %}
